<!DOCTYPE html>
<html lang="en">
<head>
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Ubuntu:wght@300&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="/css/pages/indexStyle.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta2/css/all.min.css" integrity="sha512-YWzhKL2whUzgiheMoBFwW8CKV4qpHQAEuvilg9FAn5VJUDwKZZxkJNuGM4XkWuk94WCrrwslk8yWNGmY1EduTA==" crossorigin="anonymous" referrerpolicy="no-referrer" />
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Re@dMe</title>
    <link rel="shortcut icon" type="image/x-icon" href="/img/1634170193.ico">
</head>
<body>
    <div class="container">
        <%- include('./partials/menu') %>
        <div id="slider">

            <div id="slides">
                <div id="overflow" class="_w100">
                    <div class="inner">
                        <div class="slide slide_1">
                            <div class="slide-content">
                                <img src="/img/slide3.jpg" alt="">
                            </div>
                        </div>
                        <div class="slide slide_2">
                            <div class="slide-content">
                                <img src="/img/slide2.jpg" alt="">
                            </div>
                        </div>
                        <div class="slide slide_3">
                            <div class="slide-content">
                                <img src="/img/slide1.jpg" alt="">
                            </div>
                        </div>
                        <div class="slide slide_4">
                            <div class="slide-content">
                                <img src="/img/slide4.jpg" alt="">
                            </div>
                        </div>
                    </div>
                </div>
            </div>

        </div>
        <div class="card-list _w100 _flex">
            <div class="best-seller__title">
                <h1>BEST SELLERS</h1>
            </div>
            <div class="best-seller__carousel">
                <ol id="style-2" class="best-seller__books">
                    <% productsBestSeller.forEach(products => { %>
                        <li><a href="product/detail/<%= products.id %>"><img class="best-seller__img" src=<%= products.path %> alt="<%= products.name %>"></a></li>
                    <%});%>
                </ol>
            </div>

        </div>
        <div class="card-list">
            <div class="best-seller__title">
                <h1>PROMOCIONES</h1>
            </div>
            <div class="best-seller__carousel">
                <ol id="style-2" class="best-seller__books _flex _wrap">
                    <% productsPomotions.forEach(products => { %>
                        <li><a href="product/detail/<%= products.id %>"><img class="best-seller__img" src=<%= products.path %> alt="<%= products.name %>"></a></li>
                    <%});%>
                </ol>
            </div>

        </div>
        <div class="card-list">
            <div class="best-seller__title">
                <h1>PROMOCIONES BANCARIAS</h1>
            </div>
            <div class="promotion--bank _flex">
                <img class="promotion__img" src="/img/bankPromotion.png" alt="promocion bancaria">
            </div>

        </div>
        <div class="categories categories-box">

        </div>
        <div class="social social-box _flex _w100">
            <h1 class="social__title _w100 _flex">NUESTRAS REDES</h1>
            <div class="social__list-box _w100 _flex">
                <i class="fab fa-facebook"></i>
                <i class="fab fa-twitter"></i>
                <i class="fab fa-instagram"></i>
                <i class="fab fa-youtube"></i>
            </div>
        </div>
        <%- include('./partials/footer') %>

    </div>

</body>
</html>